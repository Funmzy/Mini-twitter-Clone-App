{
  "name": "mini-twit-clone",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www",
    "compile:watch": "yarn tsc -w",
    "build": "tsc",
    "clean": "rm -rf dist && mkdir dist",
    "heroku-postbuild": "yarn clean && yarn build && yarn run:migration",
    "start:prod": "NODE_ENV=production nodemon ./bin/www",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js --config src/database/pgconfig.ts",
    "generate:migration": "yarn typeorm migration:generate -n createentities",
    "run:migration": "yarn typeorm migration:run",
    "prettier": "prettier 'src/**/*.ts'",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "fix-style": "yarn prettier:fix -w && yarn compile:watch"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/morgan": "^1.9.3",
    "bcrypt": "^5.0.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.9.1",
    "nodemailer": "^6.7.2",
    "nodemon": "^2.0.15",
    "pg": "^8.7.3",
    "postgres": "^1.0.2",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.5.0",
    "typeorm": "^0.2.43",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/nodemailer": "^6.4.4",
    "concurrently": "^7.0.0",
    "prettier": "2.5.1"
  }
}
